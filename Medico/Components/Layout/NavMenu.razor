                <MudIcon Icon="@Icons.Material.Filled.MedicalServices" Size="Size.Medium" Color="Color.Error" /> Mi Consultorio
            </a>

            <!-- Left links -->

            <ul class="navbar-nav me-auto mb-2 mb-lg-0 d-flex align-items-center">
                <li class="nav-item">
                    <a class="nav-link" href="/inicio">
                        <MudIcon Icon="@Icons.Material.Filled.Home" Size="Size.Medium" /> Inicio
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/registrarpaciente">
                        <MudIcon Icon="@Icons.Material.Filled.PersonAdd" Size="Size.Medium" /> Pacientes
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/agendar">
                        <MudIcon Icon="@Icons.Material.Filled.CalendarToday" Size="Size.Medium" /> Agenda
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/registrarmedicamento">
                        <MudIcon Icon="@Icons.Material.Filled.Medication" Size="Size.Medium" /> Medicamentos
                    </a>
                </li>
            </ul>

            <!-- Left links -->
        </div>
        <!-- Collapsible wrapper -->
        <!-- Right elements -->
        <div class="d-flex align-items-center">
            <!-- Notifications -->
            <!-- Avatar -->
            <div class="dropdown">
                <a class="nav-link" href="/Account/Login">
                    <MudAvatar Color="Color.Success">
                        <MudIcon Icon="@Icons.Material.Filled.Person" Size="Size.Medium" />
                    </MudAvatar>
                </a>
            </div>
        </div>
        <!-- Right elements -->
    </div>
    <!-- Container wrapper -->
</nav>
